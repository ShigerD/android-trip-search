<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.amap.tripdemo">


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="516c467dc5a17dba054843baf1b1be19">
        </meta-data>

        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="adjustPan">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ChooseCityActivity"
            android:theme="@style/TranparentTheme"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <activity
            android:name=".ChoosePoiActivity"
            android:theme="@style/TranparentTheme"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <activity
            android:name=".SetFavAddressActivity"
            android:theme="@style/TranparentTheme"
            android:windowSoftInputMode="adjustPan">
        </activity>


        <service android:name="com.amap.api.location.APSService">
        </service>


    </application>

</manifest>